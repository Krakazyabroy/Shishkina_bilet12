<Window x:Class="Shishkina_bilet12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shishkina_bilet12"
        mc:Ignorable="d"
             Title="Билет 12" Height="550" Width="450">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Калькулятор стоимости жалюзи" 
                   FontSize="16" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="1" Text="Наименование товара:"/>
        <TextBox x:Name="txtProductName" Grid.Row="2" Text="Жалюзи"/>

        <TextBlock Grid.Row="3" Text="Ширина (м):"/>
        <TextBox x:Name="txtWidth" Grid.Row="4"/>

        <TextBlock Grid.Row="5" Text="Высота (м):" />
        <TextBox x:Name="txtHeight" Grid.Row="6" />

        <TextBlock Grid.Row="7" Text="Материал:"/>
        <ComboBox x:Name="cmbMaterial" Grid.Row="8">
            <ComboBoxItem Content="Алюминий" Tag="15,50"/>
            <ComboBoxItem Content="Пластик" Tag="9,90"/>
        </ComboBox>

        <Button x:Name="btnCalculate" Grid.Row="9" Content="Рассчитать" 
                Height="30" Margin="0,10,0,10" Click="BtnCalculate_Click"/>

        <Border Grid.Row="10" BorderBrush="Gray" BorderThickness="1" 
                Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Результат расчета:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock x:Name="txtTotalLabel" Text="Итоговая сумма (руб):"/>
                <TextBox x:Name="txtTotal" IsReadOnly="True" Background="#F0F0F0" 
                         FontWeight="Bold" Margin="0,0,0,10"/>

                <TextBlock Text="Заплаченные деньги (руб):"/>
                <TextBox x:Name="txtPaid" Margin="0,0,0,5"/>

                <TextBlock Text="Сдача (руб):"/>
                <TextBox x:Name="txtChange" IsReadOnly="True" 
                         Background="#F0F0F0" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <Button x:Name="btnReceipt" Grid.Row="11" Content="Оформить квитанцию" 
                Height="35" Margin="0,10,0,0" Click="BtnReceipt_Click"/>
    </Grid>
</Window>
